<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/background"
    android:gravity="center">

    <!-- Score Display -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wins: "
            android:textSize="16sp"
            android:textColor="@color/text_secondary" />

        <TextView
            android:id="@+id/player1ScoreText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/player1_color"
            android:layout_marginEnd="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Draws: "
            android:textSize="16sp"
            android:textColor="@color/text_secondary" />

        <TextView
            android:id="@+id/drawScoreText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/draw_color"
            android:layout_marginEnd="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Losses: "
            android:textSize="16sp"
            android:textColor="@color/text_secondary" />

        <TextView
            android:id="@+id/player2ScoreText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/player2_color" />
    </LinearLayout>

    <!-- Tic Tac Toe Board -->
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="3"
        android:layout_gravity="center"
        android:background="@color/board_background"
        android:padding="4dp">

        <Button
            android:id="@+id/button0"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="4dp"
            android:textSize="32sp"
            android:textStyle="bold"
            android:backgroundTint="@color/cell_background" />

        <Button
            android:id="@+id/button1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="4dp"
            android:textSize="32sp"
            android:textStyle="bold"
            android:backgroundTint="@color/cell_background" />

        <Button
            android:id="@+id/button2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="4dp"
            android:textSize="32sp"
            android:textStyle="bold"
            android:backgroundTint="@color/cell_background" />

        <Button
            android:id="@+id/button3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="4dp"
            android:textSize="32sp"
            android:textStyle="bold"
            android:backgroundTint="@color/cell_background" />

        <Button
            android:id="@+id/button4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="4dp"
            android:textSize="32sp"
            android:textStyle="bold"
            android:backgroundTint="@color/cell_background" />

        <Button
            android:id="@+id/button5"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="4dp"
            android:textSize="32sp"
            android:textStyle="bold"
            android:backgroundTint="@color/cell_background" />

        <Button
            android:id="@+id/button6"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="4dp"
            android:textSize="32sp"
            android:textStyle="bold"
            android:backgroundTint="@color/cell_background" />

        <Button
            android:id="@+id/button7"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="4dp"
            android:textSize="32sp"
            android:textStyle="bold"
            android:backgroundTint="@color/cell_background" />

        <Button
            android:id="@+id/button8"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="4dp"
            android:textSize="32sp"
            android:textStyle="bold"
            android:backgroundTint="@color/cell_background" />

    </GridLayout>

    <!-- Turn Indicators -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="24dp">

        <LinearLayout
            android:id="@+id/player1Indicator"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@color/turn_inactive"
            android:layout_margin="8dp"
            android:elevation="4dp">

            <TextView
                android:id="@+id/player1SymbolText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="X"
                android:textSize="36sp"
                android:textStyle="bold"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Player 1"
                android:textSize="12sp"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/player2Indicator"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@color/turn_inactive"
            android:layout_margin="8dp"
            android:elevation="4dp">

            <TextView
                android:id="@+id/player2SymbolText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="O"
                android:textSize="36sp"
                android:textStyle="bold"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Player 2"
                android:textSize="12sp"
                android:textColor="@color/white" />
        </LinearLayout>

    </LinearLayout>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/refreshButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Refresh"
            android:backgroundTint="@color/button_primary"
            android:layout_margin="4dp" />

        <Button
            android:id="@+id/concedeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Concede"
            android:backgroundTint="@color/button_danger"
            android:layout_margin="4dp" />

        <Button
            android:id="@+id/exitButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exit"
            android:backgroundTint="@color/button_danger"
            android:layout_margin="4dp" />

    </LinearLayout>

</LinearLayout>